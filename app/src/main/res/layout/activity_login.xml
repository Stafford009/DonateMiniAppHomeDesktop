<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E1B33"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/GannonLogo"
        android:layout_width="376dp"
        android:layout_height="110dp"
        android:layout_marginTop="64dp"
        android:background="#00CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gannon_university_logo" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:text="CYSEC 212 - Donation Login"
        android:textAllCaps="false"
        android:textColor="#FBD350"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GannonLogo" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#FCD450"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/CancelButton"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#FCD450"
        android:text="Cancel"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toEndOf="@+id/LoginButton" />

    <TextView
        android:id="@+id/AttemptsText"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="492dp"
        android:text="Attempts Left:"
        android:textColor="#FBD350"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GannonLogo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AttemptsCounter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="491dp"
        android:text="3"
        android:textColor="#FBD350"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toEndOf="@+id/AttemptsText"
        app:layout_constraintTop_toBottomOf="@+id/GannonLogo"
        app:layout_constraintVertical_bias="0.187" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="text"
        android:textColorHint="#FBD350"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GannonLogo" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="209dp"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColorHint="#FCD450"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GannonLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>